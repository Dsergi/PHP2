<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>ВелоShop</title>
    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
</head>
<body>
  {% include "header.twig" %}
<main >
{% include "content.twig" %}
</main>
<button id="load">Показать еще</button>

<script>
        var from = 0;
        
        function loadMore()
        {
            $.ajax({
                url: '?from=' + from,
                dataType: 'html',
                success: function (html) {
                    $('#content').append(html);
                    from += {{ loadSize }};
                }
            });
        }
        
        loadMore();
        
        $('#load').click(function () {
            loadMore();
        });
    </script>
</body>
</html>